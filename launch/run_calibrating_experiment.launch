<?xml version="1.0"?>
<launch>
  <!-- Set environmental variable to separate output from different shimmers -->
  <env name="ROSCONSOLE_FORMAT"
    value="[${severity}] [${time}] [${node}]: ${message}"/>
  <!-- start first node and load parameters -->
  <arg name="num" default="1"/> 
  <group ns="$(eval 'shimmer' + str(arg('num')-1))">
    <!-- Run the calibrating_experiment node and set shimmer config as private
      parameters -->
    <rosparam command="load"
      file="$(find shimmer_ros)/config/calibrating_experiment.yaml"/>
    <node pkg="shimmer_ros" type="calibrating_experiment" name="calibrating_experiment"
      output="screen">
    </node>
  </group>
  
  <!-- recursively start new node and load parameters -->
  <include file="$(find shimmer_ros)/launch/run_calibrating_experiment.launch"
    if="$(eval arg('num') - 1 > 0)">
    <arg name="num" value="$(eval arg('num') - 1)"/>
  </include>
</launch>